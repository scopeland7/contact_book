<%= form_tag(results_path) do %>
	<div class='row'>	
		<div class='col-md-4'>
			<div class='form-group'>
				<%= text_field_tag :name, nil, placeholder: 'Search By Name', class: 'form-control' %>
			</div>
		</div>
	</div>

	<div class='form-group'>
		<%= submit_tag 'Search', class: 'btn btn-primary' %>
	</div>

<% end %>	

